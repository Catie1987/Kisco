{% set pageUrl = page.url.split('/').slice(2).join('/') %}

{% if locales.length %}

            {% for locale in locales -%}
            <li><a class="lang-type" href="/{{ locale.code }}/{{ pageUrl }}" rel="alternate" hreflang="{{ locale.code }}"><img src="{{ locale.flag }}">{{ locale.label }}</a></li>
          {% endfor -%}

{% endif %}
